    "dialogue_tree_hole": {
        "first_chapter": {
            "start": {
                "text": "In the hole you see a huge dragon resting on a pile of gold. You see a Trophy shimmering between the treasurers. \nYou know you want it, but it will be not easy to convince the dragon. \nYou can also climb into the hole, but with the dragon in there it could be dangerous.",
                "action": [
                    "add_npc",
                    "dragon"
                ],
                "next_chapter": "second_chapter"
            }
        },
        "second_chapter": {
            "start": {
                "text": "You approach the hole. It will be hard to avoid the dragon.",
                "options": {
                    "1": {
                        "text": "Climb into the hole.",
                        "next_success": "climbing_down",
                        "next_failure": "failed_climb",

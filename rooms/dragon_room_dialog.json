                    [
                        "add_item",
                        "lockpick"
                    ],
                    [
                        "remove_object",
                        "cracked_wall"
                    ]
                ],
                "next_chapter": "end"
            }
        },
        "second_chapter": {
            "start": {
                "text": "The cracked wall has an opening the size of a dwarf.",
